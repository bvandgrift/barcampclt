%html{:lang => "en", :class => "no-js"}
    %head
        = render "partials/_head"
    %body{:id => "#{@item[:bodyID]}", :class => "#{@item[:bodyClasses]}"}
        = render "partials/_header"
        
        #container
            .inner
                %article{:role => "main"}
                    = yield
                = render "partials/_nav"
            
        = render "partials/_footer"
        = render "partials/_bottom"
