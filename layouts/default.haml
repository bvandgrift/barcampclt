%html.no-js{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}
    %title= @item[:title]

    %meta{:content => "", :name => "description"}
    %meta{:content => "", :name => "author"}
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}

    %link{:href => "/assets/images/favicon.ico", :rel => "shortcut icon"}
    %link{:href => "/assets/images/apple-touch-icon.png", :rel => "apple-touch-icon"}

    %link{:href => "/assets/css/style.css?v=1", :rel => "stylesheet"}
    %link{:href => "/assets/css/handheld.css?v=1", :media => "handheld", :rel => "stylesheet"}

    / For the less-enabled mobile browsers like Opera Mini
    %script{:src => "http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js"}

    / jQuery linked from Google = faster &amp; possibly already in users cache

    %script{:src => "/assets/js/plugins.js"}    
    %script{:src => "http://maps.google.com/maps?file=api&amp;v=2&amp;sensor=false&amp;key=ABQIAAAAxvRN4nyyS2uXyutgQjKkTBTMKujcmyxXngLwgMQwWZLE1rES7RS0vLDfXzDR7kSehc924whAQmT45w", :type => "text/javascript"}
    %script{:src => "/assets/js/jquery.googlemaps.js"}


    %script{:src => "/assets/js/modernizr-1.5.min.js"}

    / Modernizr enables HTML5 elements &amp; feature detects
    %script{:src => "/assets/js/script.js"}
      
  %body
    #container
      = render 'partials/header'
      = render 'partials/navigation'
      
      = yield

      = render 'partials/footer'
    / END #container

