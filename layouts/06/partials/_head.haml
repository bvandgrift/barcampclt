%meta{:charset => "utf-8"}
- if @item.path == '/'
	%title BarCamp Charlotte: Oct. 22nd at 9:00am | #{@item[:title]}
- else
	%title #{@item[:title]} | BarCamp Charlotte: Oct. 22nd at 9:00am 

%meta{:name => "description", :content => "#{@item[:description]}"}
%meta{:name => "author", :content => "#{@item[:author]}"}
%link{:rel => "author", :href => "humans.txt"}

-# Defines the width of the viewport for handheld and mobile devices.
-# https://docs.google.com/present/view?id=dkx3qtm_22dxsrgcf4
%meta{:content => "True", :name => "HandheldFriendly"}
%meta{:content => "320", :name => "MobileOptimized"}
%meta{:content => "width=device-width, target-densitydpi=160dpi, initial-scale=1.0", :name => "viewport"}

-# Forces IE to use the latest rendering engine it can
%meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}

-# takes care of the mobile browsers that just can't do as much
%link{:href => "/assets/06/stylesheets/handheld.css", :rel => 'stylesheet'}

-# Stylesheet for all browsers. Different viewport sizes are
-# created as partials in '/content/assets/06/stylesheets/' and then
-# included in the 'screen.css' using a Sass '@import'.
%link{:href => "/assets/06/stylesheets/screen.css", :rel => 'stylesheet'}

-# Modernizr is first. All other javascript has been placed in
-# '/layouts/partials/_footer.haml' which is rendered right before
-# the closing </body> tag
%script{:src => "/assets/06/js/libs/modernizr.js"}

-# All of the different icon sizes for the various devices
%link{:href => "/assets/06/images/icons/apple-touch-icon-iphone.png", :rel => "apple-touch-icon-precomposed", :sizes => "114x114"}
%link{:href => "/assets/06/images/icons/apple-touch-icon-ipad.png", :rel => "apple-touch-icon-precomposed", :sizes => "72x72"}
%link{:href => "/assets/06/images/icons/apple-touch-icon-iphone3g.png", :rel => "apple-touch-icon-precomposed"}
%link{:href => "/assets/06/images/icons/apple-touch-icon-nokia.png", :rel => "shortcut icon"}
%link{:href => "/assets/06/images/icons/favicon.ico", :rel => "shortcut icon"}

